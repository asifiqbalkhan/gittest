End Sub
Private Sub CommandDot_Click()
If InStr(Text1.Text, ".") Then
Exit Sub
Else
Text1.Text = Text1.Text + "."
End If
End Sub
Private Sub Commandcls_Click()
Text1.Text = ""
End Sub
Private Sub CommandPlus_Click()
Op1 = Val(Text1.Text)
Opr = "+"
Text1.Text = ""
End Sub
Private Sub CommandMinus_Click()
Op1 = Val(Text1.Text)
Opr = "-"
Text1.Text = ""
End Sub
Private Sub CommandMul_Click()
Op1 = Val(Text1.Text)
Opr = "*"
Text1.Text = ""
End Sub
Private Sub CommandDiv_Click()
Op1 = Val(Text1.Text)
Opr = "/"
Text1.Text = ""
End Sub
Private Sub CommandEqu_Click()
Op2 = Val(Text1.Text)
Select Case Opr
Case "+": Text1.Text = Op1 + Op2
Case "*": Text1.Text = Op1 * Op2
Case "-": Text1.Text = Op1 - Op2
Case "/": Text1.Text = Op1 / Op2
End Select
End Sub
Private Sub Commandexit_Click()
End
End Sub
Private Sub Form_Load()
Text1.Text = ""
End Sub
